{
  "name": "caravan-tokyo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run dev:client & pnpm run dev:hcm",
    "dev:client": "next dev",
    "dev:hcm": "hcm 'src/**/*.module.css' -w",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint ./src/",
    "lint:fix": "biome lint --apply ./src/",
    "format": "biome format --write ./src/",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "@googleapis/fitness": "^2.0.5",
    "@langchain/google-genai": "^0.0.7",
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "@tabler/icons-react": "^2.46.0",
    "dayjs": "^1.11.10",
    "googleapis": "^131.0.0",
    "iron-session": "^8.0.1",
    "langchain": "^0.1.7",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^2.11.0",
    "swr": "^2.2.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "happy-css-modules": "^2.1.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "biome check --apply"
    ]
  }
}
