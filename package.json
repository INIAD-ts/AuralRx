    "react-dom": "^18",
    "valibot": "^0.27.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "biome check --apply"
    ]
